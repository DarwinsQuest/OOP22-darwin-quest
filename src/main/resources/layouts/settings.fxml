      <Button fx:id="closeButton" mnemonicParsing="false" onAction="#onCloseButtonPressed" text="Close" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   <stylesheets>
      <URL value="@../styles/buttonstyle.css" />
