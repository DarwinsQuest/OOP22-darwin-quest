<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" minHeight="200.0" minWidth="300.0" prefHeight="400.0" prefWidth="600.0" spacing="5.0" stylesheets="@../styles/startmenu.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="darwinsquest.graphics.StartMenuController">
   <children>
      <ImageView fx:id="titleImage" fitHeight="${vbox.height * 5 / 9}" fitWidth="${vbox.width * 5 / 9}" preserveRatio="true" />
      <Button fx:id="btPlay" onAction="#onPlayAction" text="Play" />
      <Button fx:id="btExit" onAction="#onExitAction" text="Quit" />
   </children>
</VBox>
