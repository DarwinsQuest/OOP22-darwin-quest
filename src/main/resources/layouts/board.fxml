      <Button fx:id="btFight" onAction="#onFightAction" text="_Fight" />
    </children>
    <stylesheets>
        <URL value="@../styles/fontstyle.css" />
        <URL value="@../styles/buttonstyle.css" />
        <URL value="@../styles/board.css" />
